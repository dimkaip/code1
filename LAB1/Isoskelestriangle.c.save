int Isoskelestriangle(int h)
{
    int i, k,j;
    printf("Give Isoskelestriangle height \n");
    scanf("%d", &h);
    for(k=1; k<=h; k++)
    {
        for(i=1 ; i<=h-k; i++ ){
            printf(" ");}
        for(j=1;j<=2*k-1;j++){
            printf("*");
        }

        printf("\n");
    }

    return(0);
}
